pipeline {
    agent any
    stages {
        stage ('BuildingJar') {
            steps {
                sh 'mvn clean package -f Application/pom.xml'
                
            }
        }
        stage ('Building Docker Image'){
            steps {
                sh 'cd Application && docker build -t memrlazy/dockerpractice/japp:v1 .'
                sh 'docker login -u memrlazy -p mrlazy@123'
                sh 'docker push memrlazy/dockerpractice/japp:v1'
            }
        }
    }
}
